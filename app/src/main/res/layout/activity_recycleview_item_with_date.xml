<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/activity_recycke_item_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:gravity="left|center_vertical"
        android:text="2016 年 3 月 22 号"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_recycke_item_date"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/activity_recycke_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorites" />

        <TextView
            android:id="@+id/activity_recycke_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/activity_recycke_item_type"
            android:layout_toRightOf="@+id/activity_recycke_item_type"
            android:text="看完了电影《肖生克的救赎》"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>